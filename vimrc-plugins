" ================= PLUGINS
filetype off
call plug#begin('~/.vim/plugged')

Plug 'vim-airline/vim-airline'			"status line
Plug 'vim-airline/vim-airline-themes'

Plug 'Valloric/YouCompleteMe', { 'do': './install.py' }
Plug 'davidhalter/jedi-vim'
                                        "autocomplete
Plug 'scrooloose/syntastic'				"syntax checker
Plug 'sheerun/vim-polyglot'             "language packs: syntax, indent

Plug 'Yggdroot/indentLine'              "draw indent line
Plug 'ervandew/supertab'				"autocomplete with tab
Plug 'jiangmiao/auto-pairs'             "insert/delete brackets, quotes, etc.
Plug 'scrooloose/nerdtree'              "tree explorer


" ================= COLORSCHEME
Plug 'chriskempson/base16-vim'
Plug 'Soares/base16.nvim'
Plug 'tomasr/molokai'
Plug 'pthk/vim-luna'
Plug 'nielsmadan/harlequin'
Plug 'dracula/vim'
Plug 'nanotech/jellybeans.vim'
Plug 'tyrannicaltoucan/vim-quantum'
Plug 'rakr/vim-one'
Plug 'mhartington/oceanic-next'

call plug#end()
syntax on
filetype plugin indent on

" ================= PLUGINS CONFIGURATION =====================================
" ================= AIRLINE
let g:airline_left_sep=''
let g:airline_right_sep=''
let g:airline_exclude_preview=1

" ================= SYNTASTIC
let g:syntastic_mode_map = {
        \ 'mode': 'active',
        \ 'active_filetypes':   ['python', 'html', 'javascript', 'c'],
        \ 'passive_filetypes':  ['java'] }

highlight SyntasticWarning NONE
highlight SyntasticError NONE

let g:syntastic_echo_current_error = 1
let g:syntastic_error_symbol='xx'
let g:syntastic_warning_symbol='!!'
let g:syntastic_check_on_wq = 1

"let g:syntastic_style_error_symbol='>>'
"let g:syntastic_style_warning_symbol='>>'
"let g:syntastic_always_populate_loc_list = 1
"let g:syntastic_auto_loc_list = 1

let g:syntastic_python_checkers = ['pyflakes']
let g:syntastic_html_checkers = ['w3']
let g:syntastic_c_compiler = 'gcc'

" Disable some verbosy syntax checkers
let g:syntastic_python_pylint_args = '-d C0111 -d C0326 -d C0103'
let g:syntastic_python_python_use_codec = 1

" ================= INDENTLINE
let g:indentLine_enabled = 1
let g:indentLine_setConceal = 0
let g:indentLine_char = 'â”‚'
let g:indentLine_color_term = 239
let g:indentLine_fileTypeExclude = ['tex', 'html']

" ================= NERDTREE
let NERDTreeQuitOnOpen=1
map <F2> :NERDTreeToggle<CR>

" ================= YOUCOMPLETEME
let g:ycm_auto_trigger = 1
"let g:ycm_filetype_specific_completion_to_disable = { 'python': 1 }
set completeopt-=preview
let g:ycm_add_preview_to_completeopt = 0
let g:ycm_autoclose_preview_window_after_completion = 1
let g:ycm_autoclose_preview_window_after_insertion = 1

" ================= JEDI-VIM
let g:jedi#completions_enabled = 0
let g:jedi#show_call_signatures = 1
let g:jedi#show_call_signatures_delay = 0
